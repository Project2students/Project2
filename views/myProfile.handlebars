<h1  class="profile">My Profile</h1>
<div class="container">

    <div class="user-info">
        {{#each users as |user|}}

            <div>

            <p>First name: {{user.first_name}}</p>
            <p>Last name: {{user.last_name}}</p>
            <p>Email: {{user.email}}</p>
            <p>Weight: {{user.weight}}</p>
            <p>Height: {{user.height}}</p>
            <p>Age: {{user.age}}</p>
            
            </div>
            
        {{/each}}
    </div>

    <div class="new-user-info">
        <div class="row justify-space-between-md">
        
            <div class="login-card">
                <h2 class="page-title">Update Info Here</h2>
                <form class="form signup-form">

                <div class="form-group">
                    <label for="email-signup">Email:</label>
                    <input class="form-input" type="text" id="email-signup" />
                </div>

                <div class="form-group">
                    <label for="password-signup">Password:</label>
                    <input class="form-input" type="password" id="password-signup" />
                </div>

                <div class="form-group">
                    <label for="username-signup">Weight:</label>
                    <input class="form-input" type="number" id="username-signup" />
                </div>

                <div class="form-group">
                    <label for="username-signup">Height:</label>
                    <input class="form-input" type="number" id="username-signup" />
                </div>

                <div class="form-group">
                    <label for="username-signup">Age:</label>
                    <input class="form-input" type="number" id="username-signup" />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Update</button>
                </div>
                </form>
            </div>
        </div>
    </div>

</div>




<script src="./js/profile.js" type="application/javascript"></script>
